<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relative_landing_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialogwith_whiteborder"
                android:paddingTop="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign10dp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img_opendrawer"
                    android:layout_width="@dimen/marign30dp"
                    android:layout_height="@dimen/marign25dp"
                    android:layout_marginStart="@dimen/marign10dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/nav_slider" />

                <ImageView
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:id="@+id/img_backpress"
                    android:layout_width="@dimen/marign30dp"
                    android:layout_height="@dimen/marign30dp"
                    android:layout_marginStart="@dimen/marign10dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />

                <TextView
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginLeft="@dimen/marign10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_backpress"
                    android:id="@+id/tv_page_title"
                    android:textSize="@dimen/marign16sp"
                    android:textColor="@color/page_heading_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/marign30dp"
                    android:layout_height="@dimen/marign30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/marign10dp"
                    android:layout_marginEnd="@dimen/marign10dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/user_blue" />

            </RelativeLayout>

            <fragment
                android:id="@+id/nav_host_fragment_content_host"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relative_landing_header"
                app:defaultNavHost="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navGraph="@navigation/mobile_navigation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/relative_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:paddingTop="@dimen/marign5dp"
                    android:paddingBottom="@dimen/marign5dp">

                    <LinearLayout
                        android:id="@+id/linear_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <ImageView
                            android:contentDescription="@string/home"
                            android:layout_width="@dimen/marign30dp"
                            android:layout_height="@dimen/marign30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/home" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/marign3dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/home"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relative_commisson"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/botton_nav_inactive_color"
                    android:paddingTop="@dimen/marign5dp"
                    android:paddingBottom="@dimen/marign5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/marign30dp"
                            android:layout_height="@dimen/marign30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:src="@drawable/commission" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/marign3dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/commission"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/botton_nav_inactive_color">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/marign5dp"
                        android:paddingBottom="@dimen/marign5dp">

                        <ImageView
                            android:layout_width="@dimen/marign30dp"
                            android:layout_height="@dimen/marign30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/notificatioin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/marign3dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/Notification"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/botton_nav_inactive_color"
                    android:paddingTop="@dimen/marign5dp"
                    android:paddingBottom="@dimen/marign5dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/marign30dp"
                            android:layout_height="@dimen/marign30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/history" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/marign3dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/history"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            android:fitsSystemWindows="false"
            app:headerLayout="@layout/nav_header_host"
            app:itemTextAppearance="@font/lato_bold"
            app:itemTextColor="@color/navitem_color"
            app:menu="@menu/activity_main_drawer" />
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>