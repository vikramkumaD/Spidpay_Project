<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.addmoney.Available_Online_Balance_Fragment">

        <TextView
            android:id="@+id/tv_available_online_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign40dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/available_balance"
            android:textColor="@color/black"
            android:textSize="@dimen/marign20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_addmoney_preferedoption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign40dp"
            android:layout_marginEnd="@dimen/marign40dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/light_green"
            android:textSize="@dimen/marign20sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_available_online_balance"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:fontFamily="@font/lato_bold"
            android:id="@+id/tv_alert_msg"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_available_online_balance"
            android:paddingEnd="@dimen/marign20dp"
            android:paddingStart="@dimen/marign20dp"
            android:text="@string/lowbalancemsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/linear_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign40dp"
            android:layout_marginRight="@dimen/marign20dp"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_alert_msg">

            <EditText
                android:id="@+id/edt_availbleonlinebalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/enteramount"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/marign10dp"
                android:paddingTop="@dimen/marign15dp"
                android:paddingRight="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign15dp"
                android:textColorHint="@color/lightgrey"
                android:importantForAutofill="no" />

        </LinearLayout>


        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign20dp"
            android:layout_marginEnd="@dimen/marign20dp"
            android:background="@drawable/button_bg_green"
            android:fontFamily="@font/lato"
            android:text="@string/transfer"
            android:textColor="@color/white"
            android:textSize="@dimen/marign18sp"
            app:layout_constraintTop_toBottomOf="@+id/linear_transfer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>