<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogwith_whiteborder"
    android:paddingTop="@dimen/marign20dp"
    android:paddingBottom="@dimen/marign20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_forgot_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marign20dp"
        android:layout_marginTop="@dimen/marign20dp"
        android:layout_marginEnd="@dimen/marign20dp"
        android:background="@drawable/login_mobilenumber_bg"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edt_login_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/mobileno"
            android:inputType="number"
            android:maxLength="10"
            android:paddingStart="@dimen/marign5dp"
            android:paddingTop="@dimen/marign10dp"
            android:paddingEnd="@dimen/marign10dp"
            android:paddingBottom="@dimen/marign10dp"
            android:singleLine="true"
            android:textColorHint="@color/lightgrey"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_cleare_forgot_mobilenumber"
            android:layout_width="@dimen/marign20dp"
            android:layout_height="@dimen/marign20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/marign10dp"
            android:focusable="false"
            android:src="@drawable/clear_field"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinput_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marign20dp"
        android:layout_marginTop="@dimen/marign15dp"
        android:layout_marginEnd="@dimen/marign20dp"
        app:hintEnabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_forgot_mobile_number"
        app:passwordToggleDrawable="@drawable/ic_baseline_remove_red_eye_24"
        app:passwordToggleEnabled="true">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_loginpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shadow"
            android:hint="@string/password"
            android:inputType="text"
            android:paddingStart="@dimen/marign15dp"
            android:paddingTop="@dimen/marign10dp"
            android:paddingEnd="@dimen/marign10dp"
            app:hintEnabled="false" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marign20dp"
        android:layout_marginTop="@dimen/marign20dp"
        android:layout_marginEnd="@dimen/marign20dp"
        android:layout_marginBottom="@dimen/marign20dp"
        android:background="@drawable/button_bg_green"
        android:fontFamily="@font/lato"
        android:text="@string/txtcontinue"
        android:textColor="@color/white"
        android:textSize="@dimen/marign18sp"
        app:layout_constraintTop_toBottomOf="@+id/txtinput_login_password" />


    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>