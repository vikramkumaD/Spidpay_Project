<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>




    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.dmt.DMT_TrasferMoneyActivity">

            <androidx.cardview.widget.CardView
                android:id="@+id/carview_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/marign10dp"
                    android:paddingBottom="@dimen/marign10dp">

                    <ImageView
                        android:id="@+id/img_backpress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/marign10dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_transaction_headername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_backpress"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/registersender"
                        android:textColor="@color/page_heading_color"
                        android:textSize="@dimen/marign18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/img_backpress"
                        app:layout_constraintTop_toTopOf="parent" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linear_entermobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign40dp"
                android:layout_marginEnd="@dimen/marign20dp"
                android:background="@drawable/edittext_shadow"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/carview_header">

                <EditText
                    android:id="@+id/edt_cash_deposit_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/entermobilenumber"
                    android:inputType="number"
                    android:paddingLeft="@dimen/marign10dp"
                    android:paddingTop="@dimen/marign15dp"
                    android:paddingRight="@dimen/marign10dp"
                    android:paddingBottom="@dimen/marign15dp"

                    android:textColorHint="@color/lightgrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_enterfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign20dp"
                android:layout_marginEnd="@dimen/marign20dp"
                android:background="@drawable/edittext_shadow"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linear_entermobilenumber">

                <EditText
                    android:id="@+id/edt_firstname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/firstname"
                    android:inputType="text"
                    android:paddingLeft="@dimen/marign10dp"
                    android:paddingTop="@dimen/marign15dp"
                    android:paddingRight="@dimen/marign10dp"
                    android:paddingBottom="@dimen/marign15dp"

                    android:textColorHint="@color/lightgrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign20dp"
                android:layout_marginEnd="@dimen/marign20dp"
                android:background="@drawable/edittext_shadow"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linear_enterfirstname">

                <EditText
                    android:id="@+id/edt_lastname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/lastname"
                    android:inputType="text"
                    android:paddingLeft="@dimen/marign10dp"
                    android:paddingTop="@dimen/marign15dp"
                    android:paddingRight="@dimen/marign10dp"
                    android:paddingBottom="@dimen/marign15dp"

                    android:textColorHint="@color/lightgrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_enterdob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign20dp"
                android:layout_marginEnd="@dimen/marign20dp"
                android:background="@drawable/edittext_shadow"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linear_lastname">

                <EditText
                    android:id="@+id/edt_enterdob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/enterdob"
                    android:inputType="number"
                    android:paddingLeft="@dimen/marign10dp"
                    android:paddingTop="@dimen/marign15dp"
                    android:paddingRight="@dimen/marign10dp"
                    android:paddingBottom="@dimen/marign15dp"

                    android:textColorHint="@color/lightgrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_enteraddress"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign20dp"
                android:layout_marginEnd="@dimen/marign20dp"
                android:background="@drawable/edittext_shadow"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linear_enterdob">

                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/enteraddress"
                    android:inputType="text"
                    android:paddingLeft="@dimen/marign10dp"
                    android:paddingTop="@dimen/marign15dp"
                    android:paddingRight="@dimen/marign10dp"
                    android:paddingBottom="@dimen/marign15dp"

                    android:textColorHint="@color/lightgrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_enterpincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign20dp"
                android:layout_marginEnd="@dimen/marign20dp"
                android:background="@drawable/edittext_shadow"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linear_enteraddress">

                <EditText
                    android:id="@+id/edt_pincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/enterpincode"
                    android:inputType="number"
                    android:paddingLeft="@dimen/marign10dp"
                    android:paddingTop="@dimen/marign15dp"
                    android:paddingRight="@dimen/marign10dp"
                    android:paddingBottom="@dimen/marign15dp"

                    android:textColorHint="@color/lightgrey" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign20dp"
                android:layout_marginEnd="@dimen/marign20dp"
                android:layout_marginBottom="@dimen/marign20dp"
                android:background="@drawable/button_bg_green"
                android:fontFamily="@font/lato"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/marign18sp"
                app:layout_constraintTop_toBottomOf="@+id/linear_enterpincode" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</layout>