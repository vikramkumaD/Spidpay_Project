<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/font"
    android:paddingTop="@dimen/marign30dp"
    android:paddingBottom="@dimen/marign30dp"
    android:background="@color/wallet_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="@dimen/marign20dp"
        android:fontFamily="@font/lato_bold"
        android:id="@+id/tv_trade_transfertomainwallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transfertospidwallet"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="@dimen/marign25dp"
        android:layout_marginLeft="@dimen/marign20dp"
        android:fontFamily="@font/lato_bold"
        android:id="@+id/tv_trade_trasnfertobank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tranfertobank"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_trade_transfertomainwallet" />


    <TextView
        android:layout_marginTop="@dimen/marign25dp"
        android:layout_marginLeft="@dimen/marign20dp"
        android:fontFamily="@font/lato_bold"
        android:id="@+id/tv_trade_viewalltransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viewtransction"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_trade_trasnfertobank" />





</androidx.constraintlayout.widget.ConstraintLayout>