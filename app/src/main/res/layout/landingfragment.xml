<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="landingviewmodel"
            type="com.example.spidpay.ui.landing_page.LandingViewModel" />

        <variable
            name="wallet"
            type="java.util.List&lt;com.example.spidpay.data.response.WalletResponse>" />
    </data>

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marign100dp"
        android:background="@color/white"
        tools:context=".ui.landing_page.LandingFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_landing_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign5dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/welcome"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/marign20sp" />

            <LinearLayout
                android:id="@+id/linear_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_landing_welcome"
                android:layout_marginTop="@dimen/marign20dp"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="@dimen/marign20dp"
                    android:layout_marginEnd="@dimen/marign10dp"
                    android:layout_weight="1"
                    android:background="@drawable/wallet_bg"
                    android:padding="@dimen/marign10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">


                        <TextView
                            android:id="@+id/tv_landing_mainwallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:paddingStart="@dimen/marign10dp"
                            android:paddingEnd="@dimen/marign10dp"
                            android:text="@string/spidpaywallet"
                            android:textColor="@color/white"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_landing_mainwallet"
                            android:layout_marginTop="@dimen/marign10dp"
                            android:fontFamily="@font/lato"
                            android:paddingStart="@dimen/marign10dp"
                            android:paddingEnd="@dimen/marign10dp"
                            android:text="@{`₹ `+wallet.get(1).walletBalance}"
                            android:textColor="@color/white" />


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_mainwallet_popoup"
                        android:layout_width="@dimen/marign20dp"
                        android:layout_height="@dimen/marign20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:contentDescription="TODO"
                        android:onClick="@{(v)->landingviewmodel.openAllTransactionAcivity(v,wallet.get(1).walletId,wallet.get(1).walletBalance,`SP`)}"
                        android:src="@drawable/ic_baseline_east_24" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="135dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="@dimen/marign10dp"
                    android:layout_marginEnd="@dimen/marign20dp"
                    android:layout_weight="1"
                    android:background="@drawable/trade_bg"
                    android:padding="@dimen/marign10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">


                        <TextView
                            android:id="@+id/tv_landing_tradewallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:paddingStart="@dimen/marign10dp"
                            android:paddingEnd="@dimen/marign10dp"
                            android:text="@string/tradewallet"
                            android:textColor="@color/white"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_landing_tradewallet"
                            android:layout_marginTop="@dimen/marign10dp"
                            android:fontFamily="@font/lato"
                            android:paddingLeft="@dimen/marign10dp"
                            android:paddingEnd="@dimen/marign10dp"
                            android:text="@{`₹ `+wallet.get(0).walletBalance}"
                            android:textColor="@color/white" />


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_tradewallet_popoup"
                        android:layout_width="@dimen/marign20dp"
                        android:layout_height="@dimen/marign20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:contentDescription="TODO"
                        android:onClick="@{(v)->landingviewmodel.openAllTransactionAcivity(v,wallet.get(0).walletId,wallet.get(0).walletBalance,`Trade`)}"
                        android:src="@drawable/ic_baseline_east_24" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_featureservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_wallet"
                android:layout_marginStart="@dimen/marign20dp"
                android:layout_marginTop="@dimen/marign10dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/featured"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/marign20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_featureservice"
                android:layout_marginTop="@dimen/marign20dp"
                android:background="@color/shadeslightgrey">


                <LinearLayout
                    android:id="@+id/linear_money1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:paddingStart="@dimen/marign10dp"
                    android:paddingEnd="@dimen/marign10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="@dimen/marign100dp"
                            android:layout_height="@dimen/marign100dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/landing_page_bg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:layout_width="@dimen/marign45dp"
                                    android:layout_height="53dp"
                                    android:id="@+id/img_dmt"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/image"
                                    android:src="@drawable/dmt_icon" />

                                <TextView
                                    android:textSize="@dimen/marign18sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_dmt"
                                    android:layout_marginTop="@dimen/marign10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/dmt"
                                    android:textColor="@color/white" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/relative_aeps"
                            android:layout_width="@dimen/marign100dp"
                            android:layout_height="@dimen/marign100dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/landing_page_bg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:layout_width="@dimen/marign45dp"
                                    android:layout_height="53dp"
                                    android:id="@+id/img_aadhar"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/image"
                                    android:src="@drawable/aeps_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_aadhar"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/marign10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/Aeps"
                                    android:textSize="@dimen/marign18sp"
                                    android:textColor="@color/white" />

                            </RelativeLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marign10dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="@dimen/marign100dp"
                            android:layout_height="@dimen/marign100dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/landing_page_bg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="53dp"
                                    android:id="@+id/img_aatm"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/image"
                                    android:src="@drawable/matm_icon" />

                                <TextView
                                    android:textSize="@dimen/marign18sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_aatm"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/marign10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/mAtm"
                                    android:textColor="@color/white" />


                            </RelativeLayout>
                        </RelativeLayout>

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_othereservice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_money1"
                    android:layout_marginStart="@dimen/marign20dp"
                    android:layout_marginTop="@dimen/marign10dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/otherservice"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/marign20sp" />

                <LinearLayout
                    android:id="@+id/linear_money2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_othereservice"
                    android:layout_marginTop="@dimen/marign15dp"
                    android:baselineAligned="false"
                    android:paddingStart="@dimen/marign10dp"
                    android:paddingTop="@dimen/marign10dp"
                    android:paddingEnd="@dimen/marign10dp">


                    <RelativeLayout
                        android:layout_width="@dimen/landing_page_bg_width"
                        android:layout_height="@dimen/landing_page_bg_height"
                        android:background="@drawable/ic_blue_circle_bg">

                        <RelativeLayout
                            android:id="@+id/relative_dth"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/marign15dp"
                            android:background="@drawable/ic_grey_circle">


                            <ImageView
                                android:id="@+id/img_recharge"
                                android:layout_width="@dimen/marign20dp"
                                android:layout_height="@dimen/marign30dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_dth_recharge" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative_dth"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/marign10dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/dthrecharge"
                            android:textColor="@color/white"
                            android:textSize="12sp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="@dimen/landing_page_bg_width"
                        android:layout_height="@dimen/landing_page_bg_height"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_blue_circle_bg">

                        <RelativeLayout
                            android:id="@+id/relative_electricity"
                            android:layout_width="@dimen/grey_circle_height_width"
                            android:layout_height="@dimen/grey_circle_height_width"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/marign15dp"
                            android:background="@drawable/ic_grey_circle">

                            <ImageView
                                android:id="@+id/img_gasbill"
                                android:layout_width="@dimen/marign20dp"
                                android:layout_height="@dimen/marign30dp"
                                android:layout_centerInParent="true"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_electricity_icon" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative_electricity"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/marign10dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/electricity"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="@dimen/landing_page_bg_width"
                        android:layout_height="@dimen/landing_page_bg_height"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_blue_circle_bg">

                        <RelativeLayout
                            android:id="@+id/relative_gas"
                            android:layout_width="@dimen/grey_circle_height_width"
                            android:layout_height="@dimen/grey_circle_height_width"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/marign15dp"
                            android:background="@drawable/ic_grey_circle">

                            <ImageView
                                android:id="@+id/img_gas"
                                android:layout_width="@dimen/marign20dp"
                                android:layout_height="@dimen/marign30dp"
                                android:layout_centerInParent="true"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_gas"

                                />


                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative_gas"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/marign10dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/gas"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_money2"
                    android:paddingStart="@dimen/marign10dp"
                    android:paddingTop="@dimen/marign10dp"
                    android:paddingEnd="@dimen/marign10dp"
                    android:paddingBottom="@dimen/marign30dp">


                    <RelativeLayout
                        android:layout_width="@dimen/landing_page_bg_width"
                        android:layout_height="@dimen/landing_page_bg_height"
                        android:background="@drawable/ic_blue_circle_bg">

                        <RelativeLayout
                            android:id="@+id/relative_water_bill"
                            android:layout_width="@dimen/grey_circle_height_width"
                            android:layout_height="@dimen/grey_circle_height_width"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/marign15dp"
                            android:background="@drawable/ic_grey_circle">

                            <ImageView
                                android:id="@+id/img_waterbill"
                                android:layout_width="@dimen/marign30dp"
                                android:layout_height="@dimen/marign30dp"
                                android:layout_centerInParent="true"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_tap" />


                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative_water_bill"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/marign10dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/waterbill"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/landing_page_bg_width"
                        android:layout_height="@dimen/landing_page_bg_height"
                        android:background="@drawable/ic_blue_circle_bg"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/relative_landline"
                            android:layout_width="@dimen/grey_circle_height_width"
                            android:layout_height="@dimen/grey_circle_height_width"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/marign15dp"
                            android:background="@drawable/ic_grey_circle"

                            >


                            <ImageView
                                android:id="@+id/img_dthbill"
                                android:layout_width="@dimen/marign20dp"
                                android:layout_height="@dimen/marign30dp"
                                android:layout_centerInParent="true"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_landline" />


                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative_landline"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/marign10dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/landline"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marign10dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="@dimen/marign100dp"
                            android:layout_height="@dimen/marign100dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/rectangle_bg_white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="@dimen/marign10dp"
                                        android:layout_height="@dimen/marign10dp"
                                        android:contentDescription="TODO"
                                        android:src="@drawable/circle_green" />

                                    <ImageView
                                        android:layout_width="@dimen/marign10dp"
                                        android:layout_height="@dimen/marign10dp"
                                        android:layout_marginStart="@dimen/marign3dp"
                                        android:contentDescription="TODO"
                                        android:src="@drawable/circle_green" />

                                    <ImageView
                                        android:layout_width="@dimen/marign10dp"
                                        android:layout_height="@dimen/marign10dp"
                                        android:layout_marginStart="@dimen/marign3dp"
                                        android:contentDescription="TODO"
                                        android:src="@drawable/circle_green" />
                                </LinearLayout>

                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

            <ProgressBar
                android:id="@+id/pb_landingpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>


</layout>

