<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/marign100dp"
    android:layout_height="wrap_content"
    tools:context=".ui.addmoney.Cash_Desposit_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_add_money_to_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign40dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/available_balance"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign40dp"
            android:fontFamily="@font/lato_bold"
            android:text="Rs 60000"
            android:textColor="@color/light_green"
            app:layout_constraintLeft_toRightOf="@+id/tv_add_money_to_wallet"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linear_enteramount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign40dp"
            android:layout_marginEnd="@dimen/marign20dp"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_money_to_wallet">

            <EditText
                android:id="@+id/edt_cash_deposit_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/enteramount"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/marign10dp"
                android:paddingTop="@dimen/marign15dp"
                android:paddingRight="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign15dp"
                android:textColorHint="@color/lightgrey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_selectbank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign15dp"
            android:layout_marginEnd="@dimen/marign20dp"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linear_enteramount">

            <EditText
                android:inputType="text"
                android:id="@+id/edt_availbleonlinebalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:hint="@string/selectbank"
                android:paddingLeft="@dimen/marign10dp"
                android:paddingTop="@dimen/marign15dp"
                android:paddingRight="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign15dp"
                android:textColorHint="@color/lightgrey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_selecttransctiontype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign15dp"
            android:layout_marginEnd="@dimen/marign20dp"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linear_selectbank">

            <EditText
                android:id="@+id/edt_cashdeposit_transctiontype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:hint="@string/selecttrasctiontype"
                android:paddingLeft="@dimen/marign10dp"
                android:paddingTop="@dimen/marign15dp"
                android:paddingRight="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign15dp"
                android:textColorHint="@color/lightgrey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_bankrefid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign15dp"
            android:layout_marginEnd="@dimen/marign20dp"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linear_selecttransctiontype">

            <EditText
                android:id="@+id/edt_cashdeposit_bankrefid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/bankrefid"
                android:paddingLeft="@dimen/marign10dp"
                android:paddingTop="@dimen/marign15dp"
                android:paddingRight="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign15dp"
                android:textColorHint="@color/lightgrey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign15dp"
            android:layout_marginEnd="@dimen/marign20dp"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_bankrefid">

            <EditText
                android:inputType="text"
                android:id="@+id/edt_cashdeposit_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/dateyymmdd"
                android:paddingStart="@dimen/marign10dp"
                android:paddingEnd="@dimen/marign10dp"
                android:paddingTop="@dimen/marign15dp"
                android:layout_marginStart="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign15dp"
                android:textColorHint="@color/lightgrey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign10dp"
            android:layout_marginTop="@dimen/marign15dp"
            android:layout_marginEnd="@dimen/marign20dp"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/linear_date"
            app:layout_constraintTop_toBottomOf="@+id/linear_bankrefid">

            <EditText
                android:inputType="text"
                android:id="@+id/edt_cashdeposit_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/time"
                android:paddingLeft="@dimen/marign10dp"
                android:paddingTop="@dimen/marign15dp"
                android:paddingRight="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign15dp"
                android:textColorHint="@color/lightgrey" />

        </LinearLayout>

        <ImageView
            android:contentDescription="@string/uploadreciept"
            android:id="@+id/img_upload_reciept"
            android:layout_width="@dimen/marign40dp"
            android:layout_height="37dp"
            android:layout_marginTop="@dimen/marign30dp"
            android:src="@drawable/upload"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_date" />


        <TextView
            android:id="@+id/tv_upload_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign10dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/uploadreciept"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_upload_reciept" />


        <Button
            android:id="@+id/btn_request_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marign10dp"
            android:layout_marginTop="@dimen/marign20dp"
            android:layout_marginRight="@dimen/marign10dp"
            android:background="@drawable/button_bg_green"
            android:fontFamily="@font/lato"
            android:text="@string/reqestmoney"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/marign18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_upload_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>