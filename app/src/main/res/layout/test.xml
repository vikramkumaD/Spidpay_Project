<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="login_viewmodel"
            type="com.example.spidpay.ui.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_welcomebase"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marign30dp"
            android:contentDescription="@string/image"
            android:src="@drawable/spidpay_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_loginemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marign20dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/mobileno"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/marign25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_welcomebase" />

        <TextView
            android:id="@+id/tv_otp_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marign5dp"
            android:fontFamily="@font/lato"
            android:text="@string/otptxt"
            android:textColor="@color/black"
            android:textSize="@dimen/marign18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_loginemail" />


        <LinearLayout
            android:visibility="gone"
            android:layout_marginEnd="@dimen/marign20dp"
            android:layout_marginStart="@dimen/marign20dp"
            android:id="@+id/linear_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marign30dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_otp_Txt">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign15dp"
                android:layout_weight="0">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/marign35dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/marign10dp"
                    android:paddingRight="@dimen/marign10dp"
                    android:text="@string/indiacountrycode"
                    android:textColor="@color/purple_200"
                    android:textColorHint="@color/lightgrey"
                    android:autofillHints="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign15dp"
                android:layout_weight="1"
                android:background="@drawable/login_mobilenumber_bg"
                android:orientation="horizontal">

                <EditText
                    android:autofillHints=""
                    android:id="@+id/edt_loginmobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/marign35dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/mobileno"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/marign10dp"
                    android:paddingRight="@dimen/marign10dp"
                    android:text="@={login_viewmodel.mobile_number}"
                    android:textColorHint="@color/lightgrey" />

                <ImageView
                    android:contentDescription="@string/logout"
                    android:id="@+id/img_cleareloginmobilenumber"
                    android:layout_width="@dimen/marign20dp"
                    android:layout_height="@dimen/marign20dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/marign10dp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_baseline_close_24"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/txtinput_login_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/marign15dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_mobile_number">

            <EditText
                android:autofillHints=""
                android:id="@+id/edt_loginpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/marign35dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="@dimen/marign10dp"
                android:paddingRight="@dimen/marign10dp"
                android:text="@={login_viewmodel.password}"
                android:textColorHint="@color/lightgrey" />

            <ImageView
                android:id="@+id/img_cleareloginpassword"
                android:layout_width="@dimen/marign20dp"
                android:layout_height="@dimen/marign20dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/marign10dp"
                android:layout_weight="0"
                android:contentDescription="@string/logout"
                android:src="@drawable/ic_baseline_cancel_24"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marign10dp"
            android:layout_marginTop="@dimen/marign20dp"
            android:layout_marginRight="@dimen/marign10dp"
            android:background="@drawable/button_bg_blue"
            android:fontFamily="@font/lato"
            android:onClick="@{(v)->login_viewmodel.validateLogin(v)}"
            android:text="@string/txtcontinue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/marign18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtinput_login_password" />


        <TextView
            android:id="@+id/tv_loginforgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marign20dp"
            android:gravity="center"
            android:paddingLeft="@dimen/marign15dp"
            android:paddingRight="@dimen/marign15dp"
            android:text="@string/forgotpassword_txt"
            android:textColor="@color/forgot_password_Txtcolor"
            android:textSize="@dimen/marign18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <View
            android:id="@+id/login_view"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/forgot_password_Txtcolor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_loginforgotpass" />


        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marign30dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:paddingLeft="@dimen/marign15dp"
            android:paddingRight="@dimen/marign15dp"
            android:text="@string/signup_txt"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/marign20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>