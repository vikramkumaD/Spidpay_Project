<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="verify_otp"
            type="com.example.spidpay.ui.verifyotp.VerifyOTPViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_welcomebase"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marign30dp"
            android:contentDescription="@string/image"
            android:src="@drawable/spidpay_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_loginemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/marign10dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/verfication"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/marign25sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_opt_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_opt_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marign5dp"
            android:layout_marginBottom="@dimen/marign10dp"
            android:fontFamily="@font/lato"
            android:text="@string/verficationtxt"
            android:textColor="@color/black"
            android:textSize="@dimen/marign16sp"
            app:layout_constraintBottom_toTopOf="@+id/constraint_verify_otp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_verify_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign15dp"
            android:layout_marginEnd="@dimen/marign20dp"
            android:background="@drawable/edittext_shadow"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/edt_login_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/otp"
                android:text="@={verify_otp.OTP}"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="@dimen/marign5dp"
                android:paddingTop="@dimen/marign10dp"
                android:paddingEnd="@dimen/marign10dp"
                android:paddingBottom="@dimen/marign10dp"
                android:singleLine="true"
                android:textColorHint="@color/lightgrey"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_cleare_login_mobilenumber"
                android:layout_width="@dimen/marign20dp"
                android:layout_height="@dimen/marign20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/marign10dp"
                android:src="@drawable/clear_field"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btn_verify_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marign20dp"
            android:layout_marginTop="@dimen/marign20dp"
            android:layout_marginRight="@dimen/marign20dp"
            android:background="@drawable/button_bg_blue"
            android:text="@string/txtcontinue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/marign18sp"
            android:onClick="@{(v)->verify_otp.validateOTPFiled(v)}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint_verify_otp" />


        <TextView
            android:id="@+id/tv_resentcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marign20dp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:paddingLeft="@dimen/marign15dp"
            android:paddingRight="@dimen/marign15dp"
            android:text="@string/verficationtxt2"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/marign18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_verify_otp" />


        <TextView
            android:id="@+id/tv_changenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/marign20dp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:paddingLeft="@dimen/marign15dp"
            android:paddingRight="@dimen/marign15dp"
            android:text="@string/verficationtxt3"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/marign18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_verify_otp" />

        <ProgressBar
            android:id="@+id/pb_verify_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>