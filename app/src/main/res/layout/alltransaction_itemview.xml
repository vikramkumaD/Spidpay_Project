<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:elevation="@dimen/marign10dp"
        app:cardElevation="@dimen/marign10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingEnd="@dimen/marign10dp"
            android:paddingStart="@dimen/marign10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialogwith_whiteborder"
            android:paddingTop="@dimen/marign10dp"
            android:paddingBottom="@dimen/marign10dp">


            <TextView
                android:id="@+id/tv_all_tramsaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="@string/Aeps"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_all_tramsaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Transaction id: sp0001"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_all_tramsaction_name" />

            <TextView
                android:id="@+id/tv_all_tramsaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/marign20dp"
                android:fontFamily="@font/lato_bold"
                android:text="130000"
                android:textColor="@color/light_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_all_tramsaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign20dp"
                android:fontFamily="@font/lato_bold"
                android:text="May 20 2021 8:10pm"
                android:textColor="@color/light_green"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_all_tramsaction_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>